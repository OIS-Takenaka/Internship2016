<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.activity.BillPage">

    <!-- 購入商品一覧 -->
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/to_do_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

    <!-- 右カラム -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="8">

    <!-- ポイント使用欄 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="16dp"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="27sp"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:text="ポイント利用" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <RadioButton
                    android:id="@+id/not_use_point_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="21sp"
                    android:text="使用しない"/>
                <RadioButton
                    android:id="@+id/use_point_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="21sp"
                    android:textAlignment="center"
                    android:text="1000円分使用"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>


    <!-- 購入代金一覧 -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="16dp"
        android:background="@color/white"
        android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Bill_Title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="34sp"
            android:padding="16dp"
            android:elevation="1dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:text="お会計" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="right"
                android:text="割引" />
            <TextView
                android:id="@+id/bill_discount_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="28sp"
                android:layout_weight="1"
                android:text="○○円"
                android:textColor="@color/bootstrap_brand_info"
                android:gravity="right" />
            </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="right"
                android:text="送料" />
            <TextView
                android:id="@+id/bill_deliver_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="28sp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="○○円" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@drawable/group_bill">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="合計(税込)" />
            <TextView
                android:id="@+id/bill_total_price"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="34sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/bootstrap_brand_danger"
                android:text="○○円"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:elevation="4dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_height="64sp"
            android:layout_width="match_parent"
            app:bootstrapSize="lg"
            app:bootstrapBrand="secondary"
            android:layout_weight="1"
            android:text="購入"/>

    </LinearLayout>

    </RelativeLayout>
</LinearLayout>

</LinearLayout>
